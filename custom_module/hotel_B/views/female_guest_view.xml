<?xml version = "1.0" encoding = "utf-8" ?>
<odoo>

    <record id = "action_hotel_female_guest" model = "ir.actions.act_window">
        <field name = "name">Female Guests</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">hotel.guest</field>
        <field name = "view_mode">tree,form</field>
        <field name = "context">{'default_gender' : 'female'}</field>
        <field name = "domain">[('gender', '=', 'female')]</field>
        <field name = "help" type = "html">
              <p class = "o_view_nocontent_smiling_face">
                 Create New Female Guest!
              </p>
        </field>
    </record>

    <menuitem id = "menu_female_guest"
             name = "Female Guests"
             action = "action_hotel_female_guest"
             parent ="menu_guest_master"
             sequence = "20"/>


</odoo>