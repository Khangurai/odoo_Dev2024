<?xml version = "1.0" encoding = "utf-8" ?>
<odoo>
     <record id="view_hotel_operation_tree" model="ir.ui.view">
            <field name="model">hotel.operation.tree</field>
            <field name="model">hotel.operation</field>
            <field name="arch" type="xml">
                <tree sample = "1">
                    <field name = "name"/>
                </tree>
            </field>
     </record>

     <record id="view_hotel_operation_form" model="ir.ui.view">
            <field name="model">hotel.operation.form</field>
            <field name="model">hotel.operation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="doctor_id"/>
                            <field name="reference_record"/>

                        </group>

                    </sheet>
                </form>
            </field>
     </record>

     <record id = "action_hotel_operations" model = "ir.actions.act_window">
        <field name = "name">Operations</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">hotel.operation</field>
        <field name = "view_mode">tree,form</field>
        <field name = "context">{}</field>
        <field name = "help" type = "html">
              <p class = "o_view_nocontent_smiling_face">
                 Create Your First Operation!
              </p>
        </field>
     </record>

     <menuitem id = "menu_operation"
             name = "Operations"
             action = "action_hotel_operations"
             parent = "hotel_B.menu_appointment_master"
             sequence = "15"/>
</odoo>