<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
     <field name="name">res.config.settings.view.form.inherit.hotel_B</field>
     <field name="model">res.config.settings</field>
     <field name="priority" eval="15"/>
     <field name="inherit_id" ref="base.res_config_settings_view_form"/>
     <field name="arch" type="xml">
         <xpath expr="//div[hasclass('settings')]" position="inside">
             <div class="app_settings_block" data-string="Hotel Management" string="Hotel Management" data-key="hotel_management">
                 <h2>Cancellation Date</h2>
                 <div class="row mt16 o_settings_container">
                     <div class="col-12 col-lg-6 o_setting_box">
                         <div class="o_setting_left_pane"/>
                         <div class="o_setting_right_pane">
                             <span class="o_form_label">Days</span>
                             <div class="text-muted content-group mt16">
                                 <field name="cancel_days" class="text-center oe_inline" />
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </xpath>
     </field>
 </record>
</odoo>