<?xml version = "1.0" encoding = "utf-8" ?>
<odoo>

    <record id = "action_hotel_male_guest" model = "ir.actions.act_window">
        <field name = "name">Male Guests</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">hotel.guest</field>
        <field name = "view_mode">tree,form</field>
        <field name = "context">{'default_gender' : 'male'}</field>
        <field name = "domain">[('gender', '=', 'male')]</field>
        <field name = "help" type = "html">
              <p class = "o_view_nocontent_smiling_face">
                 Create New Male Guest!
              </p>
        </field>
    </record>

    <menuitem id = "menu_male_guest"
             name = "Male Guests"
             action = "action_hotel_male_guest"
             parent ="menu_guest_master"
             sequence = "30"/>


</odoo>